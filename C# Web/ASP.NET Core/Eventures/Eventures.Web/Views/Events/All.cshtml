@model Eventures.Common.Models.Events.EventListWrapperViewModel

@{
    ViewData["Title"] = "All Events";
}

<h1 class="text-center pt-3">@ViewData["Title"]</h1>
<hr class="eventures-bg-color hr-2" />


<table class="table">
    <thead>
        <tr class="text-strong">
            <th scope="col" class="border-top-0">#</th>
            <th scope="col" class="border-top-0">Name</th>
            <th scope="col" class="border-top-0">Start</th>
            <th scope="col" class="border-top-0">End</th>
            <th scope="col" class="border-top-0">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.EventListViewModels.Count; i++)
        {
            var currentEvent = Model.EventListViewModels[i];
            var id = currentEvent.Id;
            var orderedTickets = 1;
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@currentEvent.Name</td>
                <td>@currentEvent.StartToString</td>
                <td>@currentEvent.EndToString</td>
                <td>
                    @if (currentEvent.TotalTickets < 1)
                    {
                        <p class="text-center text-danger text-strong">Sold</p>
                    }
                    else if (currentEvent.End < DateTime.UtcNow)
                    {
                        <p class="text-center text-danger text-strong">Expired</p>
                    }
                    else
                    {
                        <form asp-controller="Orders" asp-action="Finalize" method="post">
                            <input asp-for="@id" hidden />
                            <div class="row form-group mb-0">
                                <label class="text-strong col">Tickets</label>
                                <div class="col">
                                    <input asp-for="@orderedTickets" />
                                    <small class="d-block text-success">Available: @currentEvent.TotalTickets</small>
                                </div>
                                <div class="col">
                                    <button type="submit" class="btn eventures-bg-color text-dark">Order</button>
                                </div>
                            </div>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<hr class="eventures-bg-color hr-2" />