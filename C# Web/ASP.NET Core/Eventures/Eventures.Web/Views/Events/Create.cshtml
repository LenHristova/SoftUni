@model Eventures.Common.Models.Events.CreateEventInputModel

@{
    ViewData["Title"] = "Create Event";
}

<div class="mt-3 container text-center form-text text-strong p-3">
    <div class="col-7 offset-2">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr class="eventures-bg-color hr-2" />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col mr-2">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col ml-2">
                    <label asp-for="Place"></label>
                    <input asp-for="Place" class="form-control" placeholder="Place..." />
                    <span asp-validation-for="Place" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col mr-2">
                    <label asp-for="Start"></label>
                    <input asp-for="Start" class="form-control" />
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
                <div class="form-group col ml-2">
                    <label asp-for="End"></label>
                    <input asp-for="End" class="form-control" />
                    <span asp-validation-for="End" class="text-danger"></span>
                </div>
            </div>
            <hr class="eventures-bg-color hr-2" />
            <div class="form-row">
                <div class="form-group col mr-2">
                    <label asp-for="TotalTickets"></label>
                    <input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets..." />
                    <span asp-validation-for="TotalTickets" class="text-danger"></span>
                </div>
                <div class="form-group col ml-2">
                    <label asp-for="PricePerTicket"></label>
                    <input asp-for="PricePerTicket" class="form-control" placeholder="Price Per Ticket..." />
                    <span asp-validation-for="PricePerTicket" class="text-danger"></span>
                </div>
            </div>
            <hr class="eventures-bg-color hr-2" />
            <button type="submit" class="btn eventures-bg-color text-dark">@ViewData["Title"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
