@{
    ViewData["Title"] = "Home Page";
}
@inject SignInManager<User> SignInManager

@if (!SignInManager.IsSignedIn(User))
{
    <div class="jumbotron mt-3 p-5 eventures-bg-color text-dark">
        <h1>Eventures - The best ticket service in the world.</h1>
        <hr class="bg-dark hr-2" />
        <h3><a asp-area="Identity" asp-page="/Account/Login">Login</a> to start "eventing".</h3>
        <h3><a asp-area="Identity" asp-page="/Account/Register">Register</a> if you don't have an account.</h3>
    </div>
}
else
{
    <div class="jumbotron mt-3 p-5 eventures-bg-color text-dark text-center">
        @if (User.IsInRole("Admin"))
        {
            <h1>Greetings, Administrator - @User.Identity.Name!</h1>
            <hr class="hr-2 bg-pink" />
            <h4 class="text-pink">Enjoy your work.</h4>
        }
        else
        {
            <h1>Welcome, @User.Identity.Name!</h1>
            <hr class="hr-2 bg-pink" />
            <h4 class="text-pink">Eventures wishes you an exciting experience.</h4>
        }
    </div>
}