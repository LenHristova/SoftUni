@model Chushka.Common.Models.Products.DetailsProductViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="mt-3 mb-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr class="hr-2 bg-dark" />
    <div class="product-type-holder half-width mx-auto d-flex justify-content-between">
        <h3 class="text-center">Type: @Model.Type</h3>
        <h3 class="text-center">Price: $@Model.Price</h3>
    </div>
    <hr class="hr-2 bg-dark" />
    <h3 class="text-center">Description</h3>
    <div class="product-description-holder">
        <p class="text-center mt-4">
            @Model.Description
        </p>
    </div>
    <hr class="hr-2 bg-dark" />
    <h3 class="text-center">Actions</h3>

    <div class="product-action-holder mt-4 d-flex justify-content-around col-md-6 offset-3">
        <form action="/Orders/Create" method="post">
            <input name="productId" value="@Model.Id" hidden />
            <button class="btn chushka-bg-color">Order</button>
        </form>
       @if (User.IsInRole("Admin"))
       {
           <a class="btn chushka-bg-color" asp-area="" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
           <a class="btn chushka-bg-color" asp-area="" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
       }
    </div>
</div>