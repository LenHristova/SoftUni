@model Pagination

@{
    var prevDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}
<nav aria-label="...">
    <ul class="pagination justify-content-center">

        <li class="page-item @prevDisabled">
            <a class="page-link" href="/parts/all?page=@Model.PreviousPage">Previous</a>
        </li>

        @for (int i = 1; i <= Model.MaxPageCountToShow; i++)
        {
            var pageValue = Model.StartPoint + i;
            var active = pageValue == Model.CurrentPage ? "active" : string.Empty;

            <li class="page-item @active">
            <a class="page-link" href="/parts/all?page=@pageValue">@pageValue</a>
            </li>
        }

        <li class="page-item @nextDisabled">
            <a class="page-link" href="/parts/all?page=@Model.NextPage">Next</a>
        </li>
    </ul>
</nav>
