@model SuppliersByIsImporterOrLocal
@{
    ViewData["Title"] = $"All {Model.Type} suppliers";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Number of parts</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in @Model.Suppliers)
        {
        <tr>
            <td>@supplier.Id</td>
            <td>@supplier.Name</td>
            <td>@supplier.PartsCount parts</td>
            <td class="text-right"><a class="btn btn-info" href="/suppliers/@supplier.Id" role="button">More info</a></td>
        </tr>
        }
    </tbody>
</table>

