@model PartFullInfoModel

@{
    ViewData["Title"] = "Delete part";
}

<section class="container container-fluid text-center col-md-6">
    <h1>@ViewData["Title"]</h1>
    <h2>Are you sure you want to delete this part?</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Supplier"></label>
            <input asp-for="Supplier" disabled class="form-control">
        </div>

        <div class="btn btn-group-lg">
            <a href="/parts/all" class="btn btn-outline-secondary">Dismiss</a>
            <button type="submit" class="btn btn-outline-danger">Delete</button>
        </div>
    </form>
</section>