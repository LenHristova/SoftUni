@model PartFormModel

@{
    ViewData["Title"] = "Add part";
    ViewData["Submit"] = "Add";
}

<section class="container container-fluid text-center col-md-6">
    <h1>@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" required class="form-control" placeholder="Enter name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" min="0" class="form-control" placeholder="Enter price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" min="1" class="form-control" placeholder="Enter quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="dropdown">
            <label asp-for="SupplierId"></label>
            <select asp-for="SupplierId" asp-items="Model.Suppliers" class="form-control"></select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <div class="btn btn-group-lg">
            <a href="/parts/all" class="btn btn-outline-secondary">Dismiss</a>
            <button type="submit" class="btn btn-outline-success">Add</button>
        </div>
    </form>
</section>