@model OrderedCarsFromMake

@{
    ViewData["Title"] = "Cars by make";
}

@if (@Model.Cars.Any())
{
        <h1>Cars from make "@Model.Make"</h1>

        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Traveled distance</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model.Cars)
                {
                    <tr>
                        <td>@car.Make</td>
                        <td>@car.Model</td>
                        <td>@car.TraveledDistance km</td>
                        <td class="text-right"><a class="btn btn-outline-info" href="/cars/@car.Id/parts" role="button">Car parts</a></td>
                    </tr>
                }
            </tbody>
        </table>
}
else
{
    <h1>No cars from make "@Model.Make"...</h1>
}
