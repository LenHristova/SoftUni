@using System.Web.UI.WebControls
@model IMDB.Models.Film

@{
    ViewBag.Title = "Create Film";
}

<h1>Create Film</h1>

<section>
    <div>

        @using (Html.BeginForm("Create", "Film", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="@if(Model != null) {@Model.Name}">
            <label for="genre">Genre</label>
            <input type="text" id="genre" name="genre" value="@if(Model != null) {@Model.Genre}">
            <label for="director">Director</label>
            <input type="text" id="director" name="director" value="@if(Model != null) {@Model.Director}">
            <label for="year">Year</label>
            <input type="text" id="year" name="year" value="@if(Model != null) {@Model.Year}">

            <button type="submit" class="">Create</button>
            <button onclick="location.href='/';return false;" class="cancel">Cancel</button>
        }

    </div>
</section>