<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h1>Hello, {{author.fullName}}!</h1>
                    <h3>({{author.email}})</h3>
                </header>

                <h2>You have {{author.__v}} article(s).</h2>
            </article>
        </div>
    </div>
</div>
<br/>
<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-6 row-md-3">
                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>

                    <p>{{this.content}}
                    </p>

                    <small class="author">
                        {{this.author.fullName}}
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
</div>
